<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DownloadingImageActivity">

    <ImageView
            android:src="@android:drawable/btn_star_big_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgDownloadedImage" android:layout_marginEnd="238dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="141dp"
            android:layout_marginTop="107dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Download Image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_DownloadImage" android:layout_marginEnd="162dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="162dp"
            android:layout_marginTop="157dp" app:layout_constraintTop_toBottomOf="@+id/imgDownloadedImage"/>
</android.support.constraint.ConstraintLayout>