<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".showjsonobject">

    <TextView
            android:text="Please Enter the ID of the Product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="176dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="176dp" android:textSize="25sp" app:layout_constraintHorizontal_bias="0.495"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtProductId" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Name of Product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_marginTop="72dp" app:layout_constraintTop_toBottomOf="@+id/edtProductId"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="152dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="151dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtProductName"
            android:layout_marginEnd="176dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="177dp"
            app:layout_constraintHorizontal_bias="0.482" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" android:textSize="30sp"/>
    <TextView
            android:text="Price of the Product:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/txtProductName" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="176dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="177dp" app:layout_constraintHorizontal_bias="0.513"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtProductPrice" app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="40dp" app:layout_constraintHorizontal_bias="0.498" android:textSize="24sp"/>
    <Button
            android:text="Submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_submit" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/txtProductPrice" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="151dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="173dp" app:layout_constraintHorizontal_bias="1.0"/>
</android.support.constraint.ConstraintLayout>