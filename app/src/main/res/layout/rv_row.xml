<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <ImageView
            android:layout_width="150dp"

            android:layout_height="150dp"

            android:layout_alignParentLeft="true"

            android:layout_alignParentTop="true"

            android:id="@+id/RV_row_ProductImage"

            android:layout_margin="20dp"

    />
    
    <TextView
              android:layout_width="wrap_content"

              android:layout_height="wrap_content"

              android:text="id"

              android:textSize="30sp"

              android:layout_toRightOf="@+id/RV_row_ProductImage"

              android:layout_marginLeft="10dp"

              android:id="@+id/RV_row_ProductID"

    />

    <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:text="Name"

            android:textSize="30sp"

            android:layout_toRightOf="@+id/RV_row_ProductImage"

            android:layout_below="@+id/RV_row_ProductID"

            android:id="@+id/RV_row_ProductName"



    />


    <TextView

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:text="Price"

            android:textSize="30sp"

            android:layout_toRightOf="@+id/RV_row_ProductImage"

            android:layout_below="@+id/RV_row_ProductName"

            android:id="@+id/RV_row_ProductPrice"


    />



</RelativeLayout>